<% provide(:title, 'Entrada dos Temas') %>
<h1>Entrada dos Temas</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@tema) do |f| %>
		<%= render "shared/micro_error_temas" %>

      <%= f.label :tema %>
      <%= f.text_field :tema, class: 'form-control' %>

      <%= f.label :user_id %>
      <%= f.number_field :user_id, class: 'form-control' %>

      <%= f.submit "Entrada de dados", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>